@model IEnumerable<BusDepot.Models.WithdrawItemReport>

@{
    ViewBag.Title = "Withdraw item reports list";
}

<h2>Withdraw item reports list</h2>

<p>
    @Html.ActionLink("Back to the items list", "Index", "Item") |
    @Html.ActionLink("Create withdraw item report", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("First name")
        </th>
        <th>
            @Html.DisplayName("Last name")
        </th>
        <th>
            @Html.DisplayName("Item name")
        </th>
        <th>
            @Html.DisplayName("Vehicle")
        </th>
        <th>
            @Html.DisplayName("Number of taken items")
        </th>
        <th>
            @Html.DisplayName("Withdraw date")
        </th>
        <th>
            @Html.DisplayName("Notes")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car.SideNumber)
            @Html.DisplayFor(modelItem => item.Bus.SideNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfTakenItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WithdrawItemDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WithdrawItemReportNotes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.WithdrawItemReportID }) |
            @Html.ActionLink("Details", "Details", new { id = item.WithdrawItemReportID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.WithdrawItemReportID })
        </td>
    </tr>
}

</table>
