@model BusDepot.Models.WithdrawItemReport

@{
    ViewBag.Title = "Delete withdraw item report";
}

<h2>Delete withdraw item report</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Employee")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FullIdentificator)
        </dd>

        <dt>
            @Html.DisplayName("Item")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item.Name)
        </dd>

        <dt>
            @Html.DisplayName("Vehicle")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Car.FullIdentificator)
            @Html.DisplayFor(model => model.Bus.FullIdentificator)
        </dd>

        <dt>
            @Html.DisplayName("Number of taken items")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfTakenItems)
        </dd>

        <dt>
            @Html.DisplayName("Withdraw date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WithdrawItemDateTime)
        </dd>

        <dt>
            @Html.DisplayName("Notes")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WithdrawItemReportNotes)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to withdraw item report list", "Index")
        </div>
    }
</div>
