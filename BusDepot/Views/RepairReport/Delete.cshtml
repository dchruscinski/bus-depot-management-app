@model BusDepot.Models.RepairReport

@{
    ViewBag.Title = "Delete repair report";
}

<h2>Delete repair report</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Employee")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FullIdentificator)
        </dd>

        <dt>
            @Html.DisplayName("Car registration")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Car.FullIdentificator)
            @Html.DisplayFor(model => model.Bus.FullIdentificator)
        </dd>

        <dt>
            @Html.DisplayName("Repair date time")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RepairDateTime)
        </dd>

        <dt>
            @Html.DisplayName("Notes")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RepairReportNotes)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to repair reports list", "Index")
        </div>
    }
</div>
